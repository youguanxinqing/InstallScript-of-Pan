#!/bin/bash

# 格式化输出
function print_format
{
	local symbol
	local blank
	strlen=$((`expr length "$1"` + 2))
	for((i=0;i<strlen;i++)); do
		symbol="$symbol-"
		blank="$blank "
	done
	
	echo "$symbol--"
	echo "|$blank|"
	echo "| $1 |"
	echo "|$blank|"
	echo "$symbol--"
}

# 判断可执行程序是否已经安装
function is_installed
{
    if [ -x "$(command -v $1)"  ]; then
        return 1
    else
        return 0
    fi
}

function echo_note()
{
    printf "\033[1;33m$1\033[0m\n"
}

function echo_error()
{
    printf "\033[1;31m$1\033[0m\n"
}
